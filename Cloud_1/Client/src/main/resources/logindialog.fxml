<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16.0" xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cloudclient.fx.LoginDialogController">
   <HBox spacing="8.0">
      <Label text="Name" />
      <TextField fx:id="tfUserName" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox spacing="8.0">
      <Label text="Password" />
      <TextField fx:id="tfUserPassword" HBox.hgrow="ALWAYS" />
   </HBox>
   <CheckBox fx:id="cbNewUser" text="new user" />
   <HBox spacing="8.0">
      <Button onAction="#btnOkAction" text="OK" />
      <Button onAction="#btnCancelAction" text="Cancel" />
   </HBox>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
