<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="4.0" xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.LoginDialogController">
    <HBox spacing="4">
        <Label text="Имя" />
        <TextField fx:id="tfUserName" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox spacing="4">
        <Label text="Пароль" />
        <TextField fx:id="tfUserPassword" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox>
        <CheckBox fx:id="cbNewUser" text="Новый пользователь" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="4">
        <Button onAction="#btnOkAction" defaultButton="true" text="OK" />
        <Button onAction="#btnCancelAction" cancelButton="true" text="Cancel" />
    </HBox>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
